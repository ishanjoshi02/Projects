<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.mitcoe.ishanjoshi.projects.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:backgroundTint="@color/colorAccent"
        android:layout_height="75dp"
        android:layout_margin="2dp"
        android:id="@+id/current_projects"
        android:text="Current Projects"
        android:textSize="16sp"/>
    <Button
        android:layout_width="match_parent"
        android:backgroundTint="@color/colorAccent"
        android:layout_height="75dp"
        android:layout_margin="2dp"
        android:id="@+id/current_tasks"
        android:text="Current Tasks"
        android:textSize="16sp"/>
    <Button
        android:layout_width="match_parent"
        android:backgroundTint="@color/colorAccent"
        android:layout_height="75dp"
        android:layout_margin="2dp"
        android:id="@+id/create_project"
        android:text="Create New Project"
        android:textSize="16sp"/>
    <Button
        android:layout_width="match_parent"
        android:backgroundTint="@color/colorAccent"
        android:layout_height="75dp"
        android:layout_margin="2dp"
        android:id="@+id/completed_projects"
        android:text="Completed Projects"
        android:textSize="16sp"/>
</LinearLayout>
